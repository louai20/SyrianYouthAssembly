{
  "kind": "collectionType",
  "collectionName": "scholarships",
  "info": {
    "singularName": "scholarship",
    "pluralName": "scholarships",
    "displayName": "Scholarship"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": false
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "shortDescription": {
      "type": "string"
    },
    "description": {
      "type": "richtext"
    },
    "amount": {
      "type": "biginteger"
    },
    "deadline": {
      "type": "datetime",
      "required": false
    },
    "coverImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "applyLink": {
      "type": "string",
      "required": true
    },
    "formFields": {
      "type": "dynamiczone",
      "components": [
        "form.field"
      ]
    },
    "eligibility": {
      "type": "text"
    },
    "scholarship_applications": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::scholarship-application.scholarship-application",
      "mappedBy": "scholarship"
    }
  }
}
